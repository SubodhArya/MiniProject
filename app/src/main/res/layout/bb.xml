<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/cardview_light_background"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/streambb"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <RatingBar
        android:id="@+id/ratingBarbb"
        style="@android:style/Widget.DeviceDefault.Light.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/streambb"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:numStars="4" />

    <TextView
        android:id="@+id/kkbb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"

        android:text="Watch full Series here:"
        android:layout_below="@+id/ratingBarbb"
        android:layout_alignLeft="@+id/ratingBarbb"
        android:layout_alignStart="@+id/ratingBarbb"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/cprbb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GAME OF THRONES ONLINE"
        android:layout_below="@+id/kkbb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <Button
        android:id="@+id/fav13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/kkbb"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:onClick="onPR"
        android:text="ADD TO WISH LIST" />


</RelativeLayout>