<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/cardview_light_background"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/streambvsm"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <RatingBar
        android:id="@+id/ratingBarbvsm"
        style="@android:style/Widget.DeviceDefault.Light.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/streambvsm"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:numStars="2" />

    <TextView
        android:id="@+id/kk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"

        android:text="Watch full movie here:"
        android:layout_below="@+id/ratingBarbvsm"
        android:layout_alignLeft="@+id/ratingBarbvsm"
        android:layout_alignStart="@+id/ratingBarbvsm"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/cpr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAWN OF JUSTICE ONLINE"
        android:layout_below="@+id/kk1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />
    <Button
        android:id="@+id/fav2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onPR"
        android:text="Add to wishlist"
        android:layout_below="@+id/ratingBarbvsm"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />




</RelativeLayout>