<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tvsc"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tvs"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:orientation="vertical">


            <ImageButton
                android:id="@+id/Pacificrim"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:onClick="onButtonClick"
                android:src="@drawable/pacific" />

            <ImageButton
                android:id="@+id/Batman"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:onClick="onBVSMClick"
                android:src="@drawable/bm" />

            <ImageButton
                android:id="@+id/Spiderman"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:onClick="onASMClick"
                android:src="@drawable/amazing" />

            <ImageButton
                android:id="@+id/Anabelle"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:onClick="onAClick"
                android:src="@drawable/annabele" />

        </LinearLayout>


    </RelativeLayout>
</ScrollView>
